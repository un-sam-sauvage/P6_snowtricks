{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
	<h1>Posts index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Content</th>
				<th>PostGroup</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for post in posts %}
			<tr>
				<td>{{ post.id }}</td>
				<td>{{ post.name }}</td>
				<td>{{ post.content }}</td>
				<td>
					{% for category in post.categories %}
						<p>{{ category.name }}</p>
					{% endfor %}
				</td>
				<td>
					<a href="{{ path('app_posts_show', {'slug': post.slug}) }}">show</a>
					<a href="{{ path('app_posts_edit', {'id': post.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_posts_new') }}">Create new</a>
{% endblock %}
