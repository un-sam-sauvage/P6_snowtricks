{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
	<h1>Media</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ medium.id }}</td>
			</tr>
			<tr>
				<th>Path</th>
				<td><img src="{{ asset('uploads/pictures/' ~ medium.path) }}"></td>
			</tr>
			<tr>
				<th>IsVideo</th>
				<td>{{ medium.isVideo ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_media_index') }}">back to list</a>

	<a href="{{ path('app_media_edit', {'id': medium.id}) }}">edit</a>

	{{ include('media/_delete_form.html.twig') }}
{% endblock %}
