{% extends 'base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
	<h1>Comments index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for comment in comments %}
			<tr>
				<td>{{ comment.id }}</td>
				<td>{{ comment.title }}</td>
				<td>{{ comment.content }}</td>
				<td>
					<a href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
					<a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="4">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
